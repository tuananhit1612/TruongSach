@model List<TuanAnhBacDatSang_DoAnWeb.ViewModels.SanPhamViewModel>
@{
    ViewData["Title"] = "Danh sách sản phẩm";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container py-4">
    <main class="TruongSach-main-content">
        <div class="d-flex justify-content-between align-items-center mb-3">
            <h2 class="text-TruongSach-primary mb-0">Danh Sách sản phẩm</h2>
            <a asp-action="Index" asp-controller="Dashboard" class="btn btn-secondary">← Quay về DashBoard</a>
        </div>

        <a class="btn btn-success mb-3" asp-action="Create">Thêm sản phẩm mới</a>

        <div class="table-responsive">
            <table class="table table-bordered table-striped">
                <thead class="bg-vintech-primary text-white">
                    <tr>
                        <th>#</th>
                        <th>Tên sản phẩm</th>
                        <th>Giá bán</th>
                        <th>Số lượng</th>
                        <th>Loại</th>
                        <th>Hình ảnh</th>
                        <th>Thao tác</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.MaSanPham</td>
                            <td>@item.TenSanPham</td>
                            <td>@item.GiaBan.ToString("N0") đ</td>
                            <td>@item.SoLuongTon</td>
                            <td>@item.TenLoaiSanPham</td>
                            <td>
                                <img src="@item.HinhAnhDaiDien" alt="Ảnh sản phẩm" class="img-fluid" style="max-width: 100px; max-height: 100px;" />
                            </td>
                            <td>
                                <a class="btn btn-info btn-sm" asp-action="Details" asp-route-id="@item.MaSanPham">Chi tiết</a>
                                <a class="btn btn-warning btn-sm" asp-action="Edit" asp-route-id="@item.MaSanPham">Sửa</a>
                                <a class="btn btn-danger btn-sm"
                                   asp-action="Delete"
                                   asp-route-id="@item.MaSanPham"
                                   onclick="return confirm('Bạn có chắc muốn xóa sản phẩm này?');">
                                    Xóa
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </main>
</div>
