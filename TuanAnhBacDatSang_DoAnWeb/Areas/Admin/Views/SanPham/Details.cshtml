@model TuanAnhBacDatSang_DoAnWeb.ViewModels.SanPhamViewModel

@{
    ViewData["Title"] = "Chi tiết sản phẩm";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="container py-4">
    <main class="TruongSach-main-content">
        <div class="bg-white p-4 rounded shadow w-75 mx-auto">
            <h2 class="text-vintech-primary mb-4">Chi tiết sản phẩm</h2>
            <dl class="row">
                <dt class="col-sm-4">Tên sản phẩm</dt>
                <dd class="col-sm-8">@Model.TenSanPham</dd>

                <dt class="col-sm-4">Mô tả</dt>
                <dd class="col-sm-8">@Model.MoTa</dd>

                <dt class="col-sm-4">Số lượng tồn</dt>
                <dd class="col-sm-8">@Model.SoLuongTon</dd>

                <dt class="col-sm-4">Giá bán</dt>
                <dd class="col-sm-8">@Model.GiaBan.ToString("N0") đ</dd>

                <dt class="col-sm-4">Loại sản phẩm</dt>
                <dd class="col-sm-8">@Model.TenLoaiSanPham</dd>

                <dt class="col-sm-4">Trạng thái</dt>
                <dd class="col-sm-8">@Model.TrangThai</dd>

                <dt class="col-sm-4">Ngày đăng</dt>
                <dd class="col-sm-8">@Model.NgayDang?.ToString("dd/MM/yyyy")</dd>

                <dt class="col-sm-4">Hình ảnh</dt>
                <dd class="col-sm-8">
                    <img src="@Model.HinhAnhDaiDien" class="img-fluid" style="max-width: 150px; max-height: 150px; object-fit: cover;" />
                </dd>
            </dl>
            <div class="mt-3">
                <a asp-action="Edit" asp-route-id="@Model.MaSanPham" class="btn btn-warning">Sửa</a>
                <a asp-action="Index" class="btn btn-secondary ms-2">Quay lại</a>
            </div>
        </div>
    </main>
</div>
