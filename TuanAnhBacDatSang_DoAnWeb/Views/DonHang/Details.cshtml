@model TuanAnhBacDatSang_DoAnWeb.ViewModels.HoaDonViewModel
@{
    ViewData["Title"] = "Chi tiết hóa đơn";
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />

<div class="container py-5">
    <h2 class="text-success mb-4">🧾 Chi tiết hóa đơn</h2>

    <div class="row mb-4">
        <div class="col-md-6">
            <dl class="row">
                <dt class="col-sm-4">Mã hóa đơn:</dt>
                <dd class="col-sm-8">@Model.MaHoaDon</dd>

                <dt class="col-sm-4">Ngày lập:</dt>
                <dd class="col-sm-8">@Model.NgayLap?.ToString("dd/MM/yyyy HH:mm")</dd>

                <dt class="col-sm-4">Tổng tiền:</dt>
                <dd class="col-sm-8">@Model.TongTien?.ToString("N0") ₫</dd>

                <dt class="col-sm-4">Trạng thái:</dt>
                <dd class="col-sm-8">@Model.TrangThai</dd>
            </dl>
        </div>
    </div>

    @if (Model.ChiTiet != null && Model.ChiTiet.Any())
    {
        <h5 class="mb-3">📦 Chi tiết sản phẩm</h5>
        <table class="table table-bordered table-striped">
            <thead class="table-success text-center">
                <tr>
                    @* <th>Hình ảnh</th> *@
                    <th>Sản phẩm</th>
                    <th>Số lượng</th>
                    <th>Đơn giá (₫)</th>
                    <th>Thành tiền (₫)</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.ChiTiet)
                {
                    <tr class="text-center align-middle">
                        @* <td> *@
                        @*     <img src="@item." alt="@item.TenSanPham" *@
                        @*          style="width: 70px; height: 70px; object-fit: cover; border-radius: 8px;" /> *@
                        @* </td> *@
                        <td>@item.TenSanPham</td>
                        <td>@item.SoLuong</td>
                        <td>@item.DonGia.ToString("N0")</td>
                        <td>@((item.SoLuong * item.DonGia).ToString("N0"))</td>
                    </tr>
                }
            </tbody>
        </table>
    }


    <a asp-action="Index" class="btn btn-outline-secondary mt-3">Quay lại danh sách</a>
</div>
